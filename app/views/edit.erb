<h1>Original Post</h1>
<h2><%=@post.name%></h2>
<p><%=@post.content%></p>

<h1>Update Here:</h1>
<form action="/posts/<%= @post.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p>Update Your Post Name:<input type="text" name="name"></p>
    <p>Update Your Post Content:<input type="text" name="content"></p>
    <input type="submit" id="submit">
</form>
